<div class="flex flex-col justify-between p-4 w-[500px] bg-blue-100 cursor-default rounded-md">
    <div class="p-2 bg-slate-100 rounded-md">
      <p class="font-medium text-xl">Post <%= post.id %></p>
      <p class="mt-4 italic text-sm"><%= truncate(post.text, length: 100, omission: '...' ) %>
          
      <div class="flex gap-2 ml-[60%] mt-8">
        <small class="text-sm font-medium">Comments: <%= post.comments_counter %></small>
        <small class="text-sm font-medium">Likes: <%= post.likes_counter %></small>
      </div>
    </div>
</div> 
